{
    "manifest_version": 2,
    
    "name": "GitHub Memo",
    "description": "simple memo to repository of github",
    "version": "1.2",

    "icons": {
        "16": "/icon/icon16.png",
        "48": "/icon/icon48.png",
        "128": "/icon/icon128.png"
    },

    "content_security_policy": "script-src 'self'  https://*.gsstatic.com; object-src 'self'",

    "content_scripts": [
        {
            "matches": ["https://github.com/stars*"],
            "js" : [
                "/js/md5.js",
                "/js/firebase.js",
                "/js/jquery.js",
                "/js/github.memo.js"
            ]
        }
    ],

    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}
